<div class="green-hero">
    <div class="avatar-large">
        <%= image_tag @user.avatar, class: "avatar-large-image" %>
    </div>
    <h1><%= @user.name %>'s Profile</h1>
    <h2>Location: <%= @user.state %></h2>
    </div>
    <div class="c-section">
        <div class="u-float-left u-margin-left">
            <h3>About <%= @user.first_name %>: <%= @user.bio %></h3>
            <% if current_user === @user %>
            <%= link_to "Edit Profile", edit_user_registration_path(@user), class: 'c-button c-button--focal' %>
            <% end %>
        </div>
    </div>
</div>
