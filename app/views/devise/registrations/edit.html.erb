<div class="c-section">
  <div class="form-wrapper">

    <h1 class="c-title c-title--large">Edit <%= resource_name.to_s.humanize %></h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <h4 class="c-title u-margin-top">Basic Details</h4>

      <div class="field">
        <div class="c-input">
          <%= f.label :email, class: "c-input__label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "c-input__text", placeholder: "Enter Email" %>
        </div>
      </div>

      <div class="field">
        <div class="c-input">
          <%= f.label :first_name, class: "c-input__label" %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first-name", class: "c-input__text", placeholder: "Enter First Name" %>
        </div>
      </div>

      <div class="field">
        <div class="c-input">
          <%= f.label :last_name, class: "c-input__label" %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last-name", class: "c-input__text", placeholder: "Enter Last Name" %>
        </div>
      </div>

      <div class="field">
        <div class="c-input">
          <%= f.label :city, class: "c-input__label" %>
          <%= f.text_field :city, autofocus: true, autocomplete: "city", class: "c-input__text", placeholder: "Enter city" %>
        </div>
      </div>

      <div class="field">
        <div class="c-input">
          <%= f.label :state, class: "c-input__label" %>
          <%= f.text_field :state, autofocus: true, autocomplete: "state-name", class: "c-input__text", placeholder: "Enter State" %>
        </div>
      </div>

      <div class="field">
        <div class="c-input">
          <%= f.label :bio, class: "c-input__label" %>
          <%= f.text_field :bio, autofocus: true, autocomplete: "bio", class: "c-input__text", placeholder: "Tell us about yourself." %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="c-input u-margin-bottom">
        <div class="c-input__label">Profile Photo:</div> 
        <%= f.file_field :avatar, class: "c-input__file" %>
      </div>

      <h4 class="c-title u-margin-top u-margin-bottom-none">Change Password</h4>
      <em>(Leave blank if you don't want to change it. <%= @minimum_password_length %> characters minimum.)</em>

      <div class="field">
        <div class="c-input">
          <%= f.label :password, class: "c-input__label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "c-input__text", placeholder: "Enter New Password"  %>
          <% if @minimum_password_length %>
            <em></em>
          <% end %>
        </div>
      </div>

      <div class="field">
        <div class="c-input">
          <%= f.label :password_confirmation, class: "c-input__label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "c-input__text", placeholder: "Enter New Password again"  %>
        </div>
      </div>

      <h3 class="c-title u-margin-top">Enter current password to confirm changes.</h3>
      <div class="field u-margin-bottom">
        <div class="c-input">
          <%= f.label :current_password, class: "c-input__label" %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "c-input__text", placeholder: "Enter Current Password"  %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: "c-button c-button--focal c-button--full-width u-margin-bottom" %>
      </div>
    <% end %>

    <%# <h3>Cancel my account</h3> %>

    <p class="u-margin-bottom">Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <p><%= link_to "Back", :back %></p>

  </div>
</div>