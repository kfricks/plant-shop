<div class="c-section">
  <div class="form-wrapper">
    <h1 class="c-title c-title--large u-margin-bottom-small">Sign Up</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <div class="c-input">
          <%= f.label :email, class: "c-input__label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "c-input__text", placeholder: "Enter Email" %>
        </div>
      </div>

      <div class="field">
        <div class="c-input">
          <%= f.label :password, class: "c-input__label" %>
          <% if @minimum_password_length %>
          <span class="c-title c-title--hint">(<%= @minimum_password_length %> characters minimum)</span>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "c-input__text", placeholder: "Enter Password" %>
        </div>
      </div>

      <div class="field u-border-bottom u-padding-bottom-small u-margin-bottom-small">
        <div class="c-input">
          <%= f.label :password_confirmation, class: "c-input__label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "c-input__text", placeholder: "Enter Password Again" %>
        </div>
      </div>
      <div class="field field-half">
        <div class="c-input">
          <%= f.label :first_name, class: "c-input__label" %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first-name", class: "c-input__text", placeholder: "Enter First Name" %>
        </div>
      </div>

      <div class="field  field-half">
        <div class="c-input">
          <%= f.label :last_name, class: "c-input__label" %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last-name", class: "c-input__text", placeholder: "Enter Last Name" %>
        </div>
      </div>

      <div class="field">
        <div class="c-input">
          <%= f.label :bio, class: "c-input__label" %>
          <%= f.text_field :bio, autofocus: true, autocomplete: "bio", class: "c-input__text", placeholder: "Tell us about yourself." %>
        </div>
      </div>

      <div class="field">
        <div class="c-input">
          <%= f.label :city, class: "c-input__label" %>
          <%= f.text_field :city, autofocus: true, autocomplete: "city", class: "c-input__text", placeholder: "Enter city." %>
        </div>
      </div>

      <div class="field">
        <div class="c-input">
          <%= f.label :state, class: "c-input__label" %>
          <%= f.text_field :state, autofocus: true, autocomplete: "state", class: "c-input__text", placeholder: "Enter state." %>
        </div>
      </div>

      <div class="c-input u-margin-bottom">
        <div class="c-input__label">Profile Photo:</div> 
        <%= f.file_field :avatar, class: "c-input__file" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "c-button c-button--focal c-button--full-width u-margin-bottom" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>